<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Control colors -->
    <SolidColorBrush x:Key="WindowBrush" Color="#1e1e1e"/><!-- Dark background -->
    <SolidColorBrush x:Key="ContentAreaBrushLight" Color="#2b2b2b"/>
    <SolidColorBrush x:Key="ContentAreaBrushDark" Color="#1a1a1a"/>

    <SolidColorBrush x:Key="DisabledControlBrushLight" Color="#FF2C2C2C"/>
    <SolidColorBrush x:Key="DisabledControlBrushDark" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#FF777777"/>

    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#FF3A80B3"/>
    <SolidColorBrush x:Key="SelectedUnfocusedBrush" Color="#FF2E2E2E"/>

    <SolidColorBrush x:Key="ControlLightBrush" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="ControlMediumBrush" Color="#FF5FAEE3"/>

    <!-- Accent Color -->
    <SolidColorBrush x:Key="ControlDarkBrush" Color="#FFCCCCCC"/><!-- Inverted -->

    <SolidColorBrush x:Key="ControlMouseOverBrush" Color="#FF5FAEE3"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#FF71B7E8"/>

    <SolidColorBrush x:Key="GlyphBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="GlyphMouseOverBrush" Color="#FFFFFFFF"/>

    <!-- Border colors -->
    <SolidColorBrush x:Key="BorderLightBrush" Color="#FF444444"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="#FF999999"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#FFCCCCCC"/>

    <SolidColorBrush x:Key="PressedBorderLightBrush" Color="#FFAAAAAA"/>
    <SolidColorBrush x:Key="PressedBorderDarkBrush" Color="#FFDDDDDD"/>

    <SolidColorBrush x:Key="DisabledBorderLightBrush" Color="#FF555555"/>
    <SolidColorBrush x:Key="DisabledBorderDarkBrush" Color="#FF777777"/>

    <SolidColorBrush x:Key="DefaultBorderBrushDark" Color="#FFCCCCCC"/>


</ResourceDictionary>