<UserControl x:Class="TourPlanner.View.Subviews.Sidebar.ToursListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.View.Subviews.Sidebar" 
             xmlns:viewmodel="clr-namespace:TourPlanner.BusinessLayer.ViewModel"
             xmlns:model="clr-namespace:TourPlanner.BusinessLayer.Model"
             d:DataContext="{d:DesignInstance Type=viewmodel:ToursListViewModel}"
             xmlns:sidebar="clr-namespace:TourPlanner.View.Subviews.Sidebar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ListView 
        ItemsSource="{Binding Tours}"
        SelectedItem="{Binding SelectedTour, Mode=TwoWay}"
        SelectionMode="Single">
        <ListView.Resources>
            <!-- Hide the column headers -->
            <Style TargetType="GridViewColumnHeader">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>

            <!-- Define the DataTemplate for each item with a Key -->
            <DataTemplate x:Key="ToursListItemTemplate" DataType="{x:Type model:Tour}">
                <local:ToursListItemView />
            </DataTemplate>
        </ListView.Resources>

        <!-- Use the DataTemplate for each item -->
        <ListView.ItemTemplate>
            <StaticResource ResourceKey="ToursListItemTemplate"/>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
