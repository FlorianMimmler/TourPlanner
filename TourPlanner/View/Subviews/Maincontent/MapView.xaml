<UserControl x:Class="PresentationLayer.View.Subviews.Maincontent.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.View.Subviews.Maincontent"
             xmlns:maincontent="clr-namespace:PresentationLayer.View.Subviews.Maincontent"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <!--<Image Source="{StaticResource map_placeholder}" Stretch="Uniform" HorizontalAlignment="Center" MaxWidth="600" />-->
        <!-- Loading Screen -->
        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading map..." FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Error Screen -->
        <Grid Visibility="{Binding IsError, Converter={StaticResource BoolToVis}}" >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Sorry, route couldn't be loaded" FontSize="20" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Map Screen -->
        <wv2:WebView2 x:Name="webView" Visibility="{Binding IsLoaded, Converter={StaticResource BoolToVis}}" />

    </Grid>
</UserControl>
