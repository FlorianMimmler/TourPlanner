<UserControl x:Class="PresentationLayer.View.Subviews.Menu.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.View.Subviews.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             >

    <Menu Background="{DynamicResource ControlLightBrush}" Foreground="{DynamicResource ControlDarkBrush}">
        <MenuItem Header="File"></MenuItem>
        <MenuItem Header="Import/Export">
            <MenuItem Header="Import Tour" Command="{Binding OpenImportTourFormCommand}"/>
            <MenuItem Header="Export Tour" Command="{Binding OpenExportTourFormCommand}"/>
        </MenuItem>
        <MenuItem Header="Themes">
            <MenuItem Foreground="black" Header="Light" Command="{Binding LightThemeCommand}"/>
            <MenuItem Foreground="black" Header="Dark" Command="{Binding DarkThemeCommand}" />
        </MenuItem>
        <MenuItem Header="Help"></MenuItem>
    </Menu>
    

    
</UserControl>
