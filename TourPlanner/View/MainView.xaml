<Window x:Class="TourPlanner.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner.View" xmlns:sys="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800">
    

    

    <Grid>
        <!-- Top Menu -->
        <DockPanel LastChildFill="True">
            <ToolBar DockPanel.Dock="Top">
                <Button>File</Button>
                <Button>Edit</Button>
                <Button>Options</Button>
                <Button>Help</Button>
            </ToolBar>

            <!-- Main Layout -->
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <!-- Sidebar -->
                    <ColumnDefinition Width="*"/>
                    <!-- Main Content -->
                </Grid.ColumnDefinitions>

                <!-- Tour List (Sidebar) -->
                <StackPanel Grid.Column="0" Margin="0 0 5 0">

                    <TextBlock>Tours</TextBlock>
                    <TextBox Name="myTextBox" TextChanged="OnTextBoxTextChanged" Width="auto" Background="{StaticResource search_icon}" />

                    <ListView ItemsSource="{Binding Tours}">
                        <ListView.Resources>
                            <!-- Hide the column headers -->
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="auto"
                                    DisplayMemberBinding="{Binding Id}"  />
                                <GridViewColumn Width="auto"  
                                    DisplayMemberBinding="{Binding Name}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Margin="5" Content="+"/>
                </StackPanel>
                <Border BorderThickness="0 0 1 0 " BorderBrush="Black"/>
                <!-- Main Content -->
                <Grid Grid.Column="1" Margin="5 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Tabs -->
                        <RowDefinition Height="2*"/>
                        <!-- Route Map -->
                        <RowDefinition Height="1*"/>
                        <!-- Tour Logs -->
                    </Grid.RowDefinitions>

                    <!-- Tabs -->
                    <TabControl Grid.Row="0">
                        <TabItem Header="General"/>
                        <TabItem Header="Route"/>
                        <TabItem Header="Misc"/>
                    </TabControl>

                    <!-- Map -->
                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5">
                    </Border>

                    <!-- Tour Logs -->
                    <GroupBox Grid.Row="2" Width="auto" Header="Tour Logs" Margin="5">
                        <DataGrid ItemsSource="{Binding TourLogs}" AutoGenerateColumns="False"
                            CanUserAddRows="False" ColumnWidth="*" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="*"/>
                                <DataGridTextColumn Header="Distance" Binding="{Binding Distance}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
